{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd frontend && npm run build",
  "installCommand": "cd frontend && npm install && pip install -r ../requirements.txt",
  "framework": "nextjs",
  "outputDirectory": "frontend/.next",
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
